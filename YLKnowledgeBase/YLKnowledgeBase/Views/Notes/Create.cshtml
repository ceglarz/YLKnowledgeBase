@model YLKnowledgeBase.Models.Note

@{
    ViewData["Title"] = "Dodaj wpis";
}

<h2>Dodaj</h2>

<h4>Wpis</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tytuł</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">Treść</label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">Kategoria</label>
                <select asp-for="Category" class="form-control">
                    <option value="">Wybierz kategorię</option>
                    @foreach (var p in @ViewBag.Data)
                     {
                        <option value="@p.CategoryId">@p.CategoryId</option>
                     }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="DateOfCreate" class="control-label"></label>
                <input value="0001-01-01T00:00" asp-for="DateOfCreate" class="form-control" />
                <span asp-validation-for="DateOfCreate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

