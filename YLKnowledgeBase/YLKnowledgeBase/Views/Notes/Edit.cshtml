@model YLKnowledgeBase.ViewModels.NoteVMCreate;

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NoteId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfCreate" class="control-label"></label>
                <input asp-for="DateOfCreate" class="form-control" />
                <span asp-validation-for="DateOfCreate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category.CategoryId" class="control-label">Category</label>
                <select asp-for="Category.CategoryId" class="form-control">
                    @foreach (var item in Model.PossibleCategories)
            {
                <option value="@item.CategoryId">@item.Name</option>
    }
                </select>
                <span asp-validation-for="Category.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label">Category</label>
                @{ if (Model.Category == null)
                {
                @Html.DropDownList("CategoriesList", new SelectList(Enumerable.Empty<SelectListItem>()),
                new { @class = "dropdownlist" });
                }
                else
                {
                @Html.DropDownListFor(model => model.Category,
                new List<SelectListItem> { new SelectListItem { Value = Model.Category.CategoryId.ToString(), Text = Model.Category.Name } },
                new { @class = "dropdownlist" });
                }
                }
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/dropdownFactory.js"></script>
}

